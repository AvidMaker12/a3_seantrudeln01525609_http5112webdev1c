
@{
    ViewBag.Title = "Teacher Database";
}

<h2>Teachers</h2>
<p>Select a teacher from this database to see more information.</p>
<!--Add search bar to find teacher (filters: name, hiredate, salary)-->
<form action="/Teacher/Show" method="POST">
    <h4>Search Teacher</h4>
    <div>
        <label for="teacherFName">First Name: </label><input id="teacherFName" name="teacherFName" />
    </div>
    <div>
        <label for="teacherLName">Last Name: </label><input id="teacherLName" name="teacherLName" />
    </div>
    <div>
        <label for="teacherHireDate">Hire Date: </label><input id="teacherHireDate" name="teacherHireDate" />
    </div>
    <div>
        <label for="teacherSalary">Salary: </label><input type="number" id="teacherSalary" name="teacherSalary" />
    </div>
    <div>
        <input type="submit" value="Search" />
    </div>
</form>